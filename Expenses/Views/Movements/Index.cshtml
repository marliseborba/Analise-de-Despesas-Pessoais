@model IEnumerable<IGrouping<Owner, Movement>>

@{
    ViewData["Title"] = "Movimentações";
}
<br />
<br />
<h2>@ViewData["Title"]</h2>
<br />

<div class="accordion" id="accordionExample">
@foreach (var owner in Model)
{
    <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                <div class="col-md-3">
                    <h4> @owner.Key.Name</h4>
                </div>
                <div class="col-md-2">
                    Período: @owner.Key.GetMovements().FirstOrDefault().Date a @owner.Key.GetMovements().LastOrDefault().Date
                </div>
                <div class="col-md-2">
                    Movimentações: @owner.Key.GetMovements().Count()
                </div>
                <div class="col-md-2">
                    Entradas: @owner.Key.TotalReceipts().ToString("F2")
                </div>
                <div class="col-md-2">
                    Saídas: @owner.Key.TotalExpenses().ToString("F2")
                </div>
         </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample" style="">
         <div class="accordion-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>
                            Id
                        </th>
                        <th>
                            Descrição
                        </th>
                        <th>
                            Data
                        </th>
                        <th>
                            Valor
                        </th>
                        <th>
                            Identificador
                        </th>
                        <th>
                            Estabelecimento
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in owner)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Identifier)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Establishment.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
         </div>
      </div>
   </div>
}
</div>
